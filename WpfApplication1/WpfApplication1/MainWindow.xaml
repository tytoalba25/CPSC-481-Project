        <Button x:Name="btn_Entree" Content="Entree" HorizontalAlignment="Left" Margin="289,197,0,0" VerticalAlignment="Top" Width="75" Height="56" Click="btn_Entree_Click"/>
        <Button x:Name="btn_Main" Content="Main" HorizontalAlignment="Left" Margin="289,261,0,0" VerticalAlignment="Top" Width="75" Height="56" Click="btn_Main_Click"/>
