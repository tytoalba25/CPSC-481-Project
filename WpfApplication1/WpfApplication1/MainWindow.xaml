        <Button x:Name="btn_Drink" Content="Drink" HorizontalAlignment="Left" Margin="289,69,0,0" VerticalAlignment="Top" Width="75" Height="56" Click="btn_Drink_Click"/>
        <Button x:Name="btn_GoBack" Content="Go Back" HorizontalAlignment="Left" Margin="289,415,0,0" VerticalAlignment="Top" Width="75" Height="56" Click="btn_GoBack_Click"/>
        <Button x:Name="btn_ViewOrder" Content="View Order" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btn_ViewOrder_Click"/>
