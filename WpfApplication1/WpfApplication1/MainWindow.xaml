        <GroupBox Name="MainHelpMenu" Header="HelpMenu" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="436" Width="274" Visibility="Visible">
            <Grid>
                <Label Name="HelpText1" Content="Welcome!" Margin="10,10,158,0" VerticalAlignment="Top" Height="35" Width="Auto" FontSize="18"/>
                <Label Name="HelpText2" Content="Find menu items in the tabs &#xD;&#xA;to the right.&#xD;&#xA;&#xD;&#xA;Once you have selected your&#xD;&#xA;items, tap the view order&#xD;&#xA;button.&#xD;&#xA;&#xD;&#xA;Please call a waiter at any&#xD;&#xA;time." Margin="10,50,26,0" VerticalAlignment="Top" Height="354" Width="Auto" FontSize="16"/>
            </Grid>
        </GroupBox>

        <GroupBox Name="ViewOrder" Header="ViewOrder" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="436" Width="274" Visibility="Hidden"/>
        <GroupBox Name="ViewBill" Header="ViewBill" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="436" Width="274" Visibility="Hidden"/>

        <GroupBox Name="DrinkMenu" Header="DrinkMenu" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="436" Width="274" Visibility="Hidden"/>
        <GroupBox Name="AppetizerMenu" Header="AppetizerMenu" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="436" Width="274" Visibility="Hidden"/>
        <GroupBox Name="EntreeMenu" Header="EntreeMenu" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="436" Width="274" Visibility="Hidden"/>
        <GroupBox Name="MainMenu" Header="MainMenu" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="436" Width="274" Visibility="Hidden"/>
        <GroupBox Name="DessertMenu" Header="DessertMenu" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="436" Width="274" Visibility="Hidden"/>

    </Grid>
</Window>
